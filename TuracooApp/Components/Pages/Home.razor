@page "/"

<div class="d-flex flex-column align-items-center" style="width: 100%; height: calc(100vh - 192px); margin-bottom: 64px">
    <MudPaper Class="mud-theme-primary" Width="80%" Height="100%" >
        <MudImage Class="mx-auto d-block" Src="Images/logo_no_background.png" Style="max-width: 100%; height: 70%" />
        <MudText Align="Align.Center" Typo="Typo.h3" Class="mt-3" Style="padding: 10px 0">
            Din Partner i Digital Transformation
        </MudText>
        <MudText Align="Align.Center" Typo="Typo.subtitle2" Class="px-3">
            Vi omsætter komplekse udfordringer til værdiskabende digitale løsninger.
        </MudText>
        <div class="d-flex justify-center mt-auto">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Secondary"
                       Class="mt-2"
                       Href="/kontakt-os">
                Start Samarbejdet
            </MudButton>
        </div>
    </MudPaper>
</div>

<div class="d-flex flex-column align-items-center py-4" style="background-color: #f8f9fa;">
    <MudPaper Elevation="0" Width="100%" Class="px-lg-5 py-4" Style="background-color: #f8f9fa;">
        <MudText GutterBottom="true" Align="Align.Center" Typo="Typo.h5">Mere end bare teknologi</MudText>
        <!-- Adjust text width for responsiveness -->
        <MudText GutterBottom="true" Align="Align.Center" Typo="Typo.body2" Class="mx-auto px-2 px-md-5" Style="max-width: 600px;">
            Hos os handler softwareudvikling ikke bare om kode – det handler om at skabe reel forretningsværdi.
            Vi er din strategiske partner, der hjælper med at transformere idéer til skalerbare løsninger.
        </MudText>
    </MudPaper>
</div>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-8">Vores Tilgang</MudText>

    <MudGrid>
        <!-- First row -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Strategisk Partnerskab</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Vi dykker dybt ned i din forretning for at forstå dine
                            udfordringer og mål.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/strategisk-partnerskab">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Innovation & Stabilitet</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Vi kombinerer innovative teknologier med solid arkitektur.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/innovation-stabilitet">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>

        <!-- Second row -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Agil Udvikling</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Gennem tæt dialog og hurtige iterationer sikrer vi de
                            bedste løsninger.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/agil-udvikling">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">End-to-End Ekspertise</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Fra frontend til infrastruktur har vi ekspertisen til at
                            håndtere hele din teknologistack.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/end-to-end-ekspertise">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

<MudPaper Elevation="0" Class="py-10 px-4 mt-8 mb-8" Style="background-color: #f8f9fa;">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-4">Kontakt Os</MudText>
        
        <MudText Align="Align.Center">
            Har du brug for en skræddersyet løsning? Kontakt os på 
            <MudLink Href="mailto:kontakt@firma.dk" Underline="Underline.Always">kontakt@firma.dk</MudLink> 
            for en uforpligtende snak.
        </MudText>
    </MudContainer>
</MudPaper>