@page "/"

<PageTitle>Turacoo</PageTitle>

<div class="d-flex flex-column align-items-center" style="width: 100%; height: calc(100vh - 192px); margin-bottom: 64px">
    <MudPaper Class="mud-theme-primary" Width="80%" Height="100%" >
        <MudImage Class="mx-auto d-block" Src="Images/logo_no_background.png" Style="max-width: 100%; height: 70%" />
        <MudText Align="Align.Center" Typo="Typo.h3" Class="mt-3" Style="padding: 10px 0">
            Din Partner i Digital Transformation
        </MudText>
        <MudText Align="Align.Center" Typo="Typo.subtitle2" Class="px-3">
            Vi omsætter komplekse udfordringer til værdiskabende digitale løsninger.
        </MudText>
        <div class="d-flex justify-center mt-auto">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Secondary"
                       Class="mt-2"
                       Href="/kontakt-os">
                Start Samarbejdet
            </MudButton>
        </div>
    </MudPaper>
</div>

<div class="d-flex flex-column align-items-center py-4" style="background-color: #f8f9fa;">
    <MudPaper Elevation="0" Width="100%" Class="px-lg-5 py-4" Style="background-color: #f8f9fa;">
        <MudText GutterBottom="true" Align="Align.Center" Typo="Typo.h5">Mere end bare teknologi</MudText>
        <!-- Adjust text width for responsiveness -->
        <MudText GutterBottom="true" Align="Align.Center" Typo="Typo.body2" Class="mx-auto px-2 px-md-5" Style="max-width: 600px;">
            Hos os handler softwareudvikling ikke bare om kode – det handler om at skabe reel forretningsværdi.
            Vi er din strategiske partner, der hjælper med at transformere idéer til skalerbare løsninger.
        </MudText>
    </MudPaper>
</div>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-8">Vores Tilgang</MudText>

    <MudGrid>
        <!-- First row -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Strategisk Partnerskab</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Vi dykker dybt ned i din forretning for at forstå dine
                            udfordringer og mål.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/strategisk-partnerskab">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Innovation & Stabilitet</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Vi kombinerer innovative teknologier med solid arkitektur.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/innovation-stabilitet">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>

        <!-- Second row -->
        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Agil Udvikling</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Gennem tæt dialog og hurtige iterationer sikrer vi de
                            bedste løsninger.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/agil-udvikling">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="rounded-lg pa-4 h-100 d-flex flex-column">
                <MudCardContent Class="flex-grow-1 d-flex flex-column">
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">End-to-End Ekspertise</MudText>
                    <div class="d-flex justify-center flex-grow-1">
                        <MudText Align="Align.Center" Class="mb-4 mx-auto" Style="max-width: 80%;">
                            Fra frontend til infrastruktur har vi ekspertisen til at
                            håndtere hele din teknologistack.
                        </MudText>
                    </div>
                </MudCardContent>
                <div class="d-flex justify-center mt-auto">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="mt-2"
                               Href="/end-to-end-ekspertise">
                        Læs Mere
                    </MudButton>
                </div>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.Large" Class="my-4">
    <MudText Typo="Typo.h5" Class="mb-4 text-center">Our Partners</MudText>

    <MudPaper Elevation="0" Class="py-4 position-relative">
        @if (!isLoaded)
        {
            <div class="d-flex justify-center align-center" style="height: 150px;">
                <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
            </div>
        }
        else
        {
            <MudCarousel
                @ref="carousel"
                Class="mud-width-full"
                Style="height: 150px;"
                AutoCycle="true"
                ShowArrows="true"
                ShowDelimiters="true"
                Color="Color.Primary"
                EnableSwipeGesture="true"
                TData="object">

                <MudCarouselItem Transition="Transition.Slide" Color="@Color.Transparent">
                    <div class="d-flex justify-center">
                        <MudImage Src="Images/bankdata_logo.jpeg" Alt="Bankdata Logo" Height="100" Width="200" ObjectFit="ObjectFit.Contain" />
                    </div>
                </MudCarouselItem>

                
                <MudCarouselItem Transition="Transition.Slide" Color="@Color.Transparent">
                    <div class="d-flex justify-center">
                        <MudImage Src="Images/feincofee.jpeg" Alt="Feincofee Logo" Height="100" Width="200" ObjectFit="ObjectFit.Contain" />
                    </div>
                </MudCarouselItem>

                <MudCarouselItem Transition="Transition.Slide" Color="@Color.Transparent">
                    <div class="d-flex justify-center">
                        <MudImage Src="Images/plsp_logo.jpeg" Alt="PLSP Logo" Height="100" Width="200" ObjectFit="ObjectFit.Contain" />
                    </div>
                </MudCarouselItem>
            </MudCarousel>
        }
    </MudPaper>

    <div class="d-flex justify-center mt-4">
        <MudButton
            Variant="Variant.Filled"
            Color="Color.Primary"
            OnClick="TogglePause"
            Class="mx-2">
            @(isPaused ? "Resume" : "Pause")
        </MudButton>
    </div>
</MudContainer>

<MudPaper Elevation="0" Class="py-10 px-4 mt-8 mb-8" Style="background-color: #f8f9fa;">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-4">Kontakt Os</MudText>
        
        <MudText Align="Align.Center">
            Har du brug for en skræddersyet løsning? Kontakt os på 
            <MudLink Href="mailto:kontakt@firma.dk" Underline="Underline.Always">kontakt@firma.dk</MudLink> 
            for en uforpligtende snak.
        </MudText>
    </MudContainer>
</MudPaper>

<style>
    .mud-carousel-container {
        width: 90%;
        max-width: 1000px;
        margin: 0 auto;
    }

    .logo-item {
        transition: all 0.3s ease;
    }

    .grayscale {
        filter: grayscale(100%);
        opacity: 0.7;
    }

    .logo-item:hover {
        transform: scale(1.05);
        filter: grayscale(0%);
        opacity: 1;
    }
</style>

@code {
    private MudCarousel<object> carousel;
    private bool isPaused = false;
    private bool isLoaded = false;
    
    private List<LogoItem> logos = new List<LogoItem>
    {
        new LogoItem { Name = "Bankdata", ImageUrl = "Images/bankdata_logo.jpeg" },
        new LogoItem { Name = "B&R", ImageUrl = "Images/br_industrial_automation_logo.jpeg" },
        new LogoItem { Name = "Feincoffe", ImageUrl = "Images/feincofee.jpeg" },
        new LogoItem { Name = "Feinwood", ImageUrl = "Images/feinwood_logo.jpeg" },
        new LogoItem { Name = "PLSP", ImageUrl = "Images/plsp_logo.jpeg" },
    }; 
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Simulate loading delay
            await Task.Delay(100);
            isLoaded = true;
            StateHasChanged();
        }
    }
    
    private void TogglePause()
    {
        Console.WriteLine("Paused");
    }
    
    private class LogoItem
    {
        public string Name { get; set; }
        public string ImageUrl { get; set; }
    }

}